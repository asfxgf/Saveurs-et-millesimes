<div class="container form-contact"><br>
  <%= form_for @contact, url: home_index_path, remote: true do |f| %>
    <div class="row">
      <div class="col-sm-6">
          <%= f.label :name, 'NOM + prÃ©nom :', class: "white-label" %>
          <%= f.text_field  :name, required: true, class: "form-control" %>
      </div>
      <div class="col-sm-6">
          <%= f.label :email, 'Votre email :', class: "white-label" %>
          <%= f.text_field :email, required: true, class: "form-control" %>
      </div>
    </div>
    <div class="container"><br></div>
    <div class="col-sm-12">
      <%= f.text_area :message, rows: 8, cols: 40, required: true, class: "form-control",
                          placeholder: "Ecrivez votre message ici."%></br>
    </div>
    <div class="col-sm-12">
      <div class= "hidden">
        <%= f.label :nickname %>
        <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
      </div>
      </div>
        <%= f.submit 'Envoyer', class: 'btn btn-flat', id: 'strong' %>
        <div class="container"><br></div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="col-md-6" id="flash-message">
    <%= render 'flash' %>
</div>
